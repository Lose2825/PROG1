<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="br.feevale.controller.ManagerController"
prefWidth="900" prefHeight="600">

<top>
<VBox style="-fx-background-color: #2c3e50; -fx-padding: 16;">
<Label text="Gerenciamento de Atendimentos" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
<HBox spacing="30" style="-fx-padding: 12 0 0 0;">
<VBox>
<Label text="Total de Atendimentos" style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;" />
<Label fx:id="totalAtendimentosLabel" text="0" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>
<VBox>
<Label text="Valor Total" style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;" />
<Label fx:id="valorTotalLabel" text="R$ 0.00" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>
<VBox>
<Label text="Valor Médio" style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;" />
<Label fx:id="valorMedioLabel" text="R$ 0.00" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>
</HBox>
</VBox>
</top>

<left>
<VBox spacing="10" style="-fx-padding: 12;">
<Label text="Atendimentos Realizados" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
<ListView fx:id="atendimentosList" prefWidth="300" prefHeight="400" />
<HBox spacing="8">
<Button text="Atualizar" onAction="#atualizar" prefWidth="145" />
<Button text="Relatório" onAction="#gerarRelatorio" prefWidth="145" />
</HBox>
</VBox>
</left>

<center>
<VBox spacing="10" style="-fx-padding: 12;">
<Label text="Detalhes do Atendimento" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
<TextArea fx:id="detalhesArea" editable="false" prefHeight="350" 
          style="-fx-font-family: 'Courier New'; -fx-font-size: 13px;" />

<HBox spacing="10" alignment="CENTER_LEFT">
<Label text="Status:" style="-fx-font-size: 14px;" />
<ComboBox fx:id="statusComboBox" prefWidth="150" />
<Button fx:id="atualizarStatusBtn" text="Atualizar Status" onAction="#atualizarStatus" />
<Button text="Avançar Status" onAction="#avancarStatus" />
</HBox>
</VBox>
</center>

<bottom>
<HBox spacing="10" alignment="CENTER" style="-fx-padding: 12; -fx-background-color: #ecf0f1;">
<Button text="← Voltar para Atendimento" onAction="#voltarParaCliente" 
        style="-fx-font-size: 14px; -fx-padding: 8 16;" />
</HBox>
</bottom>

</BorderPane>
