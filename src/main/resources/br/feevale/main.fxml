<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/21"
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="br.feevale.controller.MainController">


<top>
<VBox>
<HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 12;">
<Label text="Kiosk Self-Service" style="-fx-font-size: 22px;" />
<Label fx:id="statusLabel" text="Pedido #1" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
</HBox>
</VBox>
</top>


<center>
<HBox spacing="24" alignment="CENTER">


<VBox spacing="8">
<Label text="Menu" style="-fx-font-size: 16px;" />
<ListView fx:id="productList" prefWidth="240" prefHeight="380" />
<Button text="Adicionar ao Carrinho" onAction="#addItem" />
</VBox>


<VBox spacing="8">
<Label text="Carrinho" style="-fx-font-size: 16px;" />
<ListView fx:id="cartList" prefWidth="240" prefHeight="380" />
<Button text="Remover Item" onAction="#removeItem" />
</VBox>


</HBox>
</center>


<bottom>
<VBox spacing="10" style="-fx-padding:12;">
<HBox spacing="20" alignment="CENTER">
<Label fx:id="totalLabel" text="Total: R$ 0.00" style="-fx-font-size: 18px;" />
<Button text="Confirmar Pedido" onAction="#confirm" style="-fx-font-size: 14px; -fx-padding: 8 16;" />
</HBox>
<HBox alignment="CENTER">
<Button text="Modo Gerenciamento" onAction="#abrirGerenciamento" style="-fx-font-size: 12px;" />
</HBox>
</VBox>
</bottom>


</BorderPane>